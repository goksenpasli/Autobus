<UserControl x:Class="Autobus.View.YolcuDüzenView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Autobus.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Autobus.Model"
    d:DesignHeight="450" d:DesignWidth="800" UseLayoutRounding="True"
    mc:Ignorable="d">
    <Grid>
        <GroupBox Header="YOLCU DÜZENİ">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel>
                    <ComboBox x:Name="CbSefer"
                        HorizontalContentAlignment="Stretch"
                        ItemTemplate="{StaticResource ComboBoxItemSeferTemplate}"
                        ItemsPanel="{StaticResource ComboBoxItemsVirtualizedPanel}"
                        ItemsSource="{Binding Otobüs.Sefer, Source={StaticResource MainViewModel}}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding VarışZamanı, Converter={StaticResource SeferSüreGeçtiConverter}}" Value="true">
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <ComboBox x:Name="CbAraç"
                        IsEnabled="False"
                        ItemTemplate="{StaticResource AraçTemplate}"
                        ItemsPanel="{StaticResource ComboBoxItemsVirtualizedPanel}"
                        ItemsSource="{Binding Otobüs.Araçlar.Araç, Source={StaticResource MainViewModel}}"
                        SelectedValue="{Binding ElementName=CbSefer, Path=SelectedItem.AraçId}"
                        SelectedValuePath="Id" />
                </StackPanel>
                <Grid Grid.Row="1" DataContext="{Binding ElementName=CbAraç, Path=SelectedItem}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Canvas Width="96" Height="96"
                        HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        Background="{StaticResource Direksiyon}"
                        RenderTransformOrigin="0.5,0.5">
                        <Canvas.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="-90" />
                                <TranslateTransform />
                            </TransformGroup>
                        </Canvas.RenderTransform>
                    </Canvas>
                    <ContentControl Grid.Column="1"
                        Content="{Binding}"
                        RenderTransformOrigin="0.5,0.5">
                        <ContentControl.ContentTemplate>
                            <DataTemplate>
                                <ItemsControl Grid.Row="1"
                                    Margin="0,3,0,0"
                                    ItemsSource="{Binding KoltukÖnizlemeListe}"
                                    Style="{StaticResource VirtualizingStackPanelItemsControl}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Width="75" Height="75"
                                                Background="Red">
                                                <TextBlock HorizontalAlignment="Center"
                                                    Foreground="White"
                                                    Text="{Binding Mode=OneWay}" />
                                                <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    d:DataContext="{d:DesignInstance Type=model:Müşteri}">
                                                    <Border.DataContext>
                                                        <MultiBinding Converter="{StaticResource KoltukNoMüşteriConverter}">
                                                            <Binding Mode="OneWay" />
                                                            <Binding ElementName="CbSefer" Path="SelectedItem" />
                                                        </MultiBinding>
                                                    </Border.DataContext>
                                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                                        FontSize="14">
                                                        <Run Foreground="White" Text="{Binding Ad}" />
                                                        <LineBreak />
                                                        <Run Foreground="White" Text="{Binding Soyad}" />
                                                        <TextBlock.ToolTip>
                                                            <Image Width="256" Height="256"
                                                                Source="{Binding Resim, Converter={StaticResource FilePathMergeConverter}}" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="{Binding BölmeSayısı}" Rows="{Binding BoyKoltukSayısı}" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                        <ContentControl.LayoutTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="-90" />
                                <TranslateTransform />
                            </TransformGroup>
                        </ContentControl.LayoutTransform>
                    </ContentControl>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
